{
  "css.validate": false,
  "scss.validate": false,
  "tailwindCSS.includeLanguages": {
    "plaintext": "html",
    "javascript": "javascript",
    "typescript": "typescriptreact",
    "css": "css",
    "scss": "scss",
    "html": "html"
  },
  "css.lint.unknownAtRules": "ignore",
  "scss.lint.unknownAtRules": "ignore",

  // ===== OTIMIZAÇÕES DE PERFORMANCE =====
  
  // Reduzir monitoramento de arquivos (economiza RAM)
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/.next/**": true,
    "**/build/**": true,
    "**/.cache/**": true
  },
  
  // Limitar memória do TypeScript Server
  "typescript.tsserver.maxTsServerMemory": 4096,
  "typescript.disableAutomaticTypeAcquisition": true,
  
  // Desabilitar telemetria (economiza CPU)
  "telemetry.telemetryLevel": "off",
  
  // Otimizar ESLint
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  
  // Limitar histórico do Git
  "git.maxGitHistoryItems": 50,
  "git.autofetch": false,
  
  // Desabilitar minimap (economiza RAM)
  "editor.minimap.enabled": false,
  
  // Reduzir sugestões automáticas
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  
  // Otimizar busca
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.next": true,
    "**/build": true,
    "**/.cache": true
  },
  
  // Otimizar renderização
  "editor.renderWhitespace": "selection",
  "editor.renderControlCharacters": false,
  
  // Salvamento automático otimizado
  "files.autoSave": "onFocusChange",
  
  // ===== OTIMIZAÇÕES ADICIONAIS =====
  
  // Desabilitar validação de links (economiza muito CPU)
  "editor.links": false,
  
  // Reduzir delay de sugestões
  "editor.quickSuggestionsDelay": 50,
  
  // Desabilitar breadcrumbs (economiza memória)
  "breadcrumbs.enabled": false,
  
  // Limitar número de editores abertos
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 8,
  "workbench.editor.limit.perEditorGroup": true,
  
  // Otimizar highlight de brackets
  "editor.bracketPairColorization.enabled": false,
  "editor.guides.bracketPairs": false,
  
  // Desabilitar sugestões de snippets inline (Copilot ghost text fica)
  "editor.inlineSuggest.enabled": true,
  
  // Otimizar formatação
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  
  // Reduzir cache de arquivos
  "files.hotExit": "onExitAndWindowClose",
  
  // Otimizar terminal
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.persistentSessionScrollback": 100,
  
  // Desabilitar preview de arquivos grandes
  "workbench.editor.enablePreview": true,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  
  // Otimizar Node.js (Next.js)
  "js.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  
  // Excluir mais arquivos da busca
  "files.exclude": {
    "**/.git": true,
    "**/.next": true,
    "**/node_modules": true,
    "**/.cache": true,
    "**/dist": true,
    "**/build": true
  }
}
