{
  // ===== CONFIGURAÇÕES REACT + NEXT.JS =====
  "css.validate": false,
  "scss.validate": false,
  "tailwindCSS.includeLanguages": {
    "plaintext": "html",
    "javascript": "javascript",
    "typescript": "typescriptreact",
    "css": "css",
    "scss": "scss",
    "html": "html"
  },
  "css.lint.unknownAtRules": "ignore",
  "scss.lint.unknownAtRules": "ignore",

  // ===== OTIMIZAÇÕES MÁXIMAS DE PERFORMANCE =====
  
  // Monitoramento de arquivos - REDUÇÃO MASSIVA DE RAM
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/.next/**": true,
    "**/build/**": true,
    "**/.cache/**": true,
    "**/public/**": true,
    "**/*.log": true
  },
  
  // Exclusão de busca - MELHORA MUITO A VELOCIDADE
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.next": true,
    "**/build": true,
    "**/.cache": true,
    "**/public": true,
    "**/*.log": true
  },
  
  // Excluir arquivos do explorador
  "files.exclude": {
    "**/.git": true,
    "**/.next": true,
    "**/node_modules": true,
    "**/.cache": true,
    "**/dist": true,
    "**/build": true,
    "**/*.log": true
  },
  
  // TypeScript - LIMITA MEMÓRIA E REDUZ CPU
  "typescript.tsserver.maxTsServerMemory": 4096,
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "relative",
  
  // JavaScript
  "js.suggest.autoImports": true,
  
  // ESLint - VALIDA APENAS O NECESSÁRIO
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  
  // Git - REDUZ CPU E REDE
  "git.maxGitHistoryItems": 50,
  "git.autofetch": false,
  "git.enabled": true,
  
  // DESABILITAR RECURSOS PESADOS
  "editor.minimap.enabled": false,
  "editor.codeLens": false,
  "editor.parameterHints.enabled": false,
  "editor.links": false,
  "editor.renderControlCharacters": false,
  "breadcrumbs.enabled": false,
  "editor.bracketPairColorization.enabled": false,
  "editor.guides.bracketPairs": false,
  
  // Sugestões otimizadas
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  "editor.quickSuggestionsDelay": 50,
  "editor.inlineSuggest.enabled": true,
  
  // Renderização otimizada
  "editor.renderWhitespace": "selection",
  
  // Formatação otimizada
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  
  // Salvamento automático
  "files.autoSave": "onFocusChange",
  "files.hotExit": "onExitAndWindowClose",
  
  // Limitar editores abertos - ECONOMIZA MUITA RAM
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 8,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.enablePreview": true,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  
  // Inicialização rápida
  "workbench.startupEditor": "none",
  "window.restoreWindows": "none",
  
  // Terminal otimizado
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.persistentSessionScrollback": 100,
  
  // Telemetria desabilitada
  "telemetry.telemetryLevel": "off",
  
  // Desabilitar aceleração de hardware (se tiver problemas de renderização)
  // "disable-hardware-acceleration": true
}
